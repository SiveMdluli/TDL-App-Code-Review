{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "plugins": ["import"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "no-use-before-define": "off",
    "no-plusplus": "off",
    "import/prefer-default-export": "off",
    "eol-last": "off",
    "import/extensions": [ 1, { 
      "js": "always", "json": "always"
    }],
    "import/no-cycle": "off"
  },
  "ignorePatterns": [
    "dist/",
    "build/"
  ]
}